  <script>
    // Lista de URLs permitidas
    const allowedURLs = [
      "//ok.ru/videoembed/2837748386519",
      "//ok.ru/videoembed/4494793902719",
      "https://nebunexa.co/red/?get=https://streamtp1.com/global2.php?stream=dsports"
    ];

    const iframe = document.getElementById('secureFrame');

    // Función para cargar la URL en el iframe
    function loadIframe(url) {
      if (allowedURLs.includes(url)) {
        iframe.src = url;
      } else {
        alert("La URL seleccionada no está permitida.");
        iframe.src = "about:blank";
      }
    }
